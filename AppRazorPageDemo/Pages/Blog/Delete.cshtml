@page "/xoaBlog/{id:int}"
@model AppRazorPageDemo.Pages_Blog.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Xoá bài viết</h1>

<h3>Bạn có chắc chắn muốn xoá nó</h3>
<div>
    <h4>Bài Viết</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Created)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Article.Id" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a asp-page="./Index">Trở lại danh sách bài viết</a>
    </form>
</div>
