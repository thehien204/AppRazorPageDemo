@page
@model AppRazorPageDemo.Pages_Blog.IndexModel

@{
    ViewData["Title"] = "Index";
    int i = 1;
}

<h1>Các Bài Viết</h1>
<form method="get" asp-page="./Index">
    <label><h4>Tìm kiếm</h4></label>
    <input name="SearchString" value=""/>
    <button type="submit">Tìm</button>
</form>
<p>
    <a asp-page="Create" class ="btn btn-primary">Tạo Bài Viết Mới</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>STT</th>
        <th>
            @Html.DisplayNameFor(model => model.Article[0].Title)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Article[0].Created)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Article) {
    <tr>
        <td>@(i++)</td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            <a asp-page="./Edit" asp-route-id="@item.Id" class = "btn btn-warning">Chỉnh sửa</a> 
            <a asp-page="./Details" asp-route-id="@item.Id" class = "btn btn-info">Xem</a> 
            <a asp-page="./Delete" asp-route-id="@item.Id" class = "btn btn-danger">Xoá</a>
        </td>
    </tr>
}
    </tbody>
</table>
